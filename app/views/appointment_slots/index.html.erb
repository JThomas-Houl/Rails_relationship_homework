<p id="notice"><%= notice %></p>

<h1>Appointment Slots</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Patient</th>
      <th>Symptom</th>
      <th>Gp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointment_slots.each do |appointment_slot| %>
      <tr>
        <td><%= appointment_slot.time %></td>
        <td><%= appointment_slot.patient %></td>
        <td><%= appointment_slot.symptom %></td>
        <td><%= appointment_slot.gp_id %></td>
        <td><%= link_to 'Show', appointment_slot %></td>
        <td><%= link_to 'Edit', edit_appointment_slot_path(appointment_slot) %></td>
        <td><%= link_to 'Destroy', appointment_slot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment Slot', new_appointment_slot_path %>
